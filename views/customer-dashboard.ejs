  <!-- dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    
    /* ===== Global AJAX ===== */
    $.ajaxSetup({ cache: false });

    /* ===== Layout helpers ===== */
    function isMobile(){ return $(window).width() < 992; }
    function showSidebar(){
      $('#sidebar').addClass('active');
      if (isMobile()){ $('#sidebarOverlay').addClass('show'); $('body').addClass('sidebar-open'); }
    }
    function hideSidebar(){
      $('#sidebar').removeClass('active');
      if (isMobile()){ $('#sidebarOverlay').removeClass('show'); $('body').removeClass('sidebar-open'); }
    }
    function setSubNavFor(page){
      let title = page === 'dashboard' ? 'Dashboard'
               : page === 'mypet' ? 'My Pet'
               : page === 'consult' ? 'Consultation'
               : page === 'profileDetails' ? 'Account Settings' : '';
      $('#subnav-title').text(title).show();
      const topbarHeight = $('#topbar').outerHeight() || 56;
      const subnavHeight = $('#sub-nav').outerHeight();
      $('.wrapper').css('padding-top', (topbarHeight + subnavHeight) + 'px');
    }

   /* ===== Messages helpers ===== */
function esc(s){
  return String(s ?? '')
    .replace(/&/g,'&amp;').replace(/</g,'&lt;')
    .replace(/>/g,'&gt;').replace(/"/g,'&quot;')
    .replace(/'/g,'&#039;');
}
function initials(name){
  const n = String(name || 'SV').trim();
  const parts = n.split(/\s+/).slice(0,2);
  return parts.map(p => (p[0] || '').toUpperCase()).join('') || 'SV';
}
function timeAgo(iso){
  const d = new Date(iso), now = new Date();
  const s = Math.max(1, Math.floor((now - d)/1000));
  if (s < 60) return s + 's';
  const m = Math.floor(s/60); if (m < 60) return m + 'm';
  const h = Math.floor(m/60); if (h < 24) return h + 'h';
  const days = Math.floor(h/24); if (days < 7) return days + 'd';
  return d.toLocaleDateString();
}
/* Fetch list â€” hit the real endpoint, plus a root fallback */
/* Mark read (single or all) â€” server expects { ids } or { all:true } */
function markMessagesRead(ids, done){
  if (ids && ids.length){
    $.ajax({
      url:'/customer/messages/mark-read',
      method:'POST',
      contentType:'application/json',
      data: JSON.stringify({ ids })   // (was messageIds)
    }).always(function(){ done && done(); });
    return;
  }
  $.ajax({
    url:'/customer/messages/mark-read',
    method:'POST',
    contentType:'application/json',
    data: JSON.stringify({ all: true })
  }).always(function(){ done && done(); });
}

function fetchMessagesList(cb){
  $.getJSON('/customer/messages', function(r){
    const arr = Array.isArray(r?.messages) ? r.messages : [];
    cb(true, arr);
  }).fail(function(){
    // fallback if the router isnâ€™t mounted at /customer
    $.getJSON('/messages', function(r){
      const arr = Array.isArray(r?.messages) ? r.messages : [];
      cb(true, arr);
    }).fail(function(xhr){
      console.error('messages fetch failed:', xhr?.status, xhr?.responseText);
      cb(false, []);
    });
  });
}

/* Badge (counts) */
/* Badge (counts) â€” call the real route directly */
function refreshMessageBadge(){
  const $badge = $('#messageBadge');
  const $icon  = $('.message-icon');
  function applyCount(n){
    n = Number(n || 0);
    if (n > 0){ $badge.text(n > 99 ? '99+' : n).show(); $icon.addClass('has-unread'); }
    else      { $badge.hide().text(''); $icon.removeClass('has-unread'); }
  }
  $.getJSON('/customer/messages/unread-count', function(r){
    applyCount(r?.count ?? r?.unread ?? 0);
  }).fail(function(xhr){
    console.error('unread-count failed:', xhr?.status, xhr?.responseText);
  });
}

window.refreshMessageBadge = refreshMessageBadge;

/* One message card (full-width, wraps) */
/* Renders one message card with a quick "mark read" button */
function renderMessageItem(m){
  const isRead = !!(m.read || m.isRead);
  const typeLabel =
    m.type === 'suspension' ? 'Suspension' :
    m.type === 'warning'    ? 'Warning'    :
    (m.type ? (String(m.type).charAt(0).toUpperCase()+String(m.type).slice(1)) : 'Info');

  const idSafe = esc(m._id || m.id || '');

  return `
    <div class="msg-item ${isRead ? 'read' : 'unread'}" data-id="${idSafe}">
      <div class="msg-avatar">${esc(initials(m.fromName || 'SmartVet'))}</div>
      <div class="msg-main">
        <div class="msg-head">
          <div class="msg-title-text">${esc(m.title || m.subject || 'Message')}</div>
          <span class="msg-badge">${esc(typeLabel)}</span>
        </div>
        <div class="msg-body">${esc(m.body || m.text || m.preview || '')}</div>
        <div class="msg-meta"><i class="far fa-clock"></i> ${esc(timeAgo(m.createdAt || m.timestamp || Date.now()))}</div>
      </div>
      <div class="msg-actions">
        ${isRead ? '' : `<button class="msg-read-btn" title="Mark as read" aria-label="Mark as read" data-id="${idSafe}">
          <i class="fas fa-check"></i>
        </button>`}
      </div>
    </div>
  `;
}

/* Fancy popup with tabs, search, sort, skeleton loader, sticky footer */
function openMessagesPopup(){
  Swal.fire({
    title: '',
    html: `
      <div class="msg-header">
        <div class="title"><i class="fas fa-inbox"></i><span>Messages</span></div>
        <button class="msg-close" id="msgCloseBtn" aria-label="Close"><i class="fa-solid fa-xmark"></i></button>
      </div>

      <div class="msg-controls">
        <div class="msg-tabs" role="tablist" aria-label="Message filters">
          <button class="msg-tab active" data-tab="all"    role="tab" aria-selected="true">All</button>
          <button class="msg-tab"         data-tab="unread" role="tab" aria-selected="false">
            Unread <span class="msg-unread-pill" id="msgUnreadPill">0</span>
          </button>
        </div>
        <div class="msg-tools">
          <select id="msgSort" class="msg-sort" aria-label="Sort">
            <option value="newest" selected>Newest</option>
            <option value="oldest">Oldest</option>
          </select>
        </div>
      </div>

      <div id="msgList" class="msg-list">
        ${Array.from({length:4}).map(()=>`
          <div class="msg-skel">
            <div class="skel-av"></div>
            <div>
              <div class="skel-line skel-40" style="margin-bottom:10px;"></div>
              <div class="skel-line skel-80" style="margin-bottom:6px;"></div>
              <div class="skel-line skel-60"></div>
            </div>
          </div>
        `).join('')}
      </div>

      <div class="msg-footer">
        <button class="chipbtn" id="msgMarkAll"><i class="fas fa-check-double"></i> Mark all read</button>
        <button class="msg-close" id="msgCloseBtnBottom" aria-label="Close"><i class="fa-solid fa-xmark"></i></button>
      </div>
    `,
    customClass: { popup: 'custom-msg-popup' },
    showConfirmButton: false,
    showCloseButton: false,
      heightAuto: false,
  scrollbarPadding: false,
    willOpen: function(){
      $(document).on('click', '#msgCloseBtn, #msgCloseBtnBottom', () => Swal.close());
    },
    didOpen: function(){
      const $list = $('#msgList');
      const $tabs = $('.msg-tab');
      const $sort = $('#msgSort');
      const $pill = $('#msgUnreadPill');

      // state
      let ALL = [];
      let TAB = 'all';
      let SORT = 'newest';

      function unreadCount(arr){
        return arr.filter(m => !(m.read || m.isRead)).length;
      }

      function htmlEmpty(icon='ðŸ’¬', text='No messages found'){
        return `<div class="msg-empty"><span class="emoji">${icon}</span>${esc(text)}</div>`;
      }

      function render(){
        const list = (TAB === 'unread') ? ALL.filter(m => !(m.read || m.isRead)) : ALL.slice();
        list.sort((a,b)=>{
          const ta = new Date(a.createdAt || a.timestamp || 0).getTime();
          const tb = new Date(b.createdAt || b.timestamp || 0).getTime();
          return SORT === 'newest' ? (tb - ta) : (ta - tb);
        });

        $pill.text(unreadCount(ALL));
        if (!list.length){
          $list.html(htmlEmpty(TAB==='unread' ? 'ðŸŽ‰' : 'ðŸ’¬', TAB==='unread' ? 'All caught up!' : 'No messages.'));
          return;
        }
        $list.html(list.map(renderMessageItem).join(''));
      }

      function setTab(tab){
        TAB = tab;
        $tabs.removeClass('active').attr('aria-selected','false');
        $tabs.filter(`[data-tab="${tab}"]`).addClass('active').attr('aria-selected','true');
        render();
      }

      // fetch
      fetchMessagesList(function(ok, messages){
        if (!ok){
          $list.html(htmlEmpty('âš ï¸','Couldnâ€™t load messages.'));
          return;
        }
        ALL = (messages || []).map(m => ({...m}));
        render();

        // card click â†’ mark read
        $list.off('click', '.msg-item').on('click', '.msg-item', function(e){
          if ($(e.target).closest('.msg-read-btn').length) return;
          const $row = $(this);
          if ($row.hasClass('unread')){
            const id = $row.data('id');
            markMessagesRead([id], function(){
              const idx = ALL.findIndex(x => (x._id||x.id) === id);
              if (idx >= 0){ ALL[idx].read = true; ALL[idx].isRead = true; }
              $row.removeClass('unread').addClass('read').find('.msg-dot').remove();
              refreshMessageBadge();
              render();
            });
          }
        });

        // quick "mark read" button
        $list.off('click', '.msg-read-btn').on('click', '.msg-read-btn', function(e){
          e.stopPropagation();
          const id = $(this).data('id');
          markMessagesRead([id], function(){
            const idx = ALL.findIndex(x => (x._id||x.id) === id);
            if (idx >= 0){ ALL[idx].read = true; ALL[idx].isRead = true; }
            refreshMessageBadge();
            render();
          });
        });

        // mark all read
        $(document).off('click', '#msgMarkAll').on('click', '#msgMarkAll', function(){
          const ids = ALL.filter(m => !(m.read || m.isRead)).map(m => m._id || m.id).filter(Boolean);
          if (!ids.length){
            Swal.fire({ toast:true, icon:'success', title:'All messages are already read', position:'top-end', timer:1200, showConfirmButton:false });
            return;
          }
          markMessagesRead(ids, function(){
            ALL = ALL.map(m => ({...m, read:true, isRead:true}));
            refreshMessageBadge();
            render();
            Swal.fire({ toast:true, icon:'success', title:'Marked all as read', position:'top-end', timer:1400, showConfirmButton:false });
          });
        });

        // tabs / sort
        $(document).off('click', '.msg-tab').on('click', '.msg-tab', function(){
          setTab($(this).data('tab'));
        });
        $sort.on('change', function(){ SORT = this.value; render(); });
      });
    },
    willClose: function(){
      $(document).off('click', '#msgMarkAll');
      $(document).off('click', '#msgCloseBtn');
      $(document).off('click', '#msgCloseBtnBottom');
      $('#msgList').off('click', '.msg-item');
      $('#msgList').off('click', '.msg-read-btn');
      $(document).off('click', '.msg-tab');
    }
  });
}

