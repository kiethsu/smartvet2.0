<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Doctor Dashboard</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
  <!-- Flatpickr CSS for modern calendar -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <style>
    /* General Reset/Body */
    body {
      background-color: #f8f9fa;
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
      margin: 0;
      padding: 0;
      color: #333;
    }
    /* Left Sidebar & Right Sidebar Layout */
    .dashboard-container {
      display: flex;
      flex-wrap: wrap;
      padding: 2rem;
    }
    .left-panel {
      flex: 1 1 65%;
      margin-right: 1.5rem;
    }
    .right-panel {
      flex: 1 1 30%;
    }
    /* Greeting Section */
    .greeting-card {
      background: #fff;
      border: none;
      border-radius: 12px;
      padding: 1.5rem;
      margin-bottom: 1.5rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }
    .greeting-card h2 {
      font-weight: 600;
      margin-bottom: 0.5rem;
    }
    .greeting-card p {
      margin: 0;
      color: #777;
    }
    /* Stats Section */
    .stats-row {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
    }
    .stat-card {
      background: #fff;
      border: none;
      border-radius: 12px;
      flex: 1;
      padding: 1rem;
      text-align: center;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }
    .stat-card h4 {
      margin-top: 0.5rem;
      margin-bottom: 0.5rem;
      font-size: 1.1rem;
    }
    .stat-number {
      font-size: 1.8rem;
      font-weight: bold;
      color: #007bff;
    }
    /* Chart/Card */
    .chart-card {
      background: #fff;
      border: none;
      border-radius: 12px;
      padding: 1.5rem;
      margin-bottom: 1.5rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }
    /* Limit chart canvas height */
    .chart-card canvas {
      max-height: 300px;
      width: 100% !important;
    }
    /* Calendar and Appointment List */
    .calendar-card,
    .appointments-card {
      background: #fff;
      border: none;
      border-radius: 12px;
      padding: 1.5rem;
      margin-bottom: 1.5rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }
    .calendar-card h4,
    .appointments-card h4 {
      margin-bottom: 1rem;
      font-weight: 600;
    }
    /* Flatpickr Calendar Container */
    #followUpCalendar {
      width: 100%;
      margin: 0;
      padding: 0;
    }
    /* Force flatpickr calendar to fill the container */
    .flatpickr-calendar {
      width: 100% !important;
      max-width: none;
      box-shadow: none;
      border: none;
    }
    /* Custom box styling for day cells */
    .flatpickr-day {
      border: 1px solid #ddd;
      border-radius: 4px;
      margin: 2px;
      width: calc(100% / 7 - 4px);
      height: 2.5em;
      line-height: 2.5em;
      text-align: center;
      transition: background 0.2s, color 0.2s;
    }
    .flatpickr-day:hover {
      background: #007bff;
      color: #fff;
    }
    /* Override flatpickr header for minimalism */
    .flatpickr-month {
      background: #f8f9fa;
      padding: 0.5rem;
      border-bottom: 1px solid #eee;
    }
    .flatpickr-current-month {
      font-size: 1rem;
      font-weight: 600;
      color: #333;
      text-align: center;
    }
    .flatpickr-weekdays {
      background: #fff;
      border-bottom: 1px solid #eee;
    }
    .flatpickr-weekday {
      color: #555;
      font-size: 0.85rem;
      padding: 0.5rem 0;
    }
    /* Highlight only follow-up dates */
    .flatpickr-day.green-highlight {
      background: #28a745;
      color: #fff;
    }
    /* Appointments List */
    .appointment-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      border-bottom: 1px solid #f1f1f1;
      padding: 0.5rem 0;
    }
    .appointment-item:last-child {
      border-bottom: none;
    }
    .appointment-info {
      display: flex;
      flex-direction: column;
    }
    .appointment-title {
      font-weight: 600;
      margin: 0;
    }
    .appointment-date {
      font-size: 0.85rem;
      color: #777;
    }
    /* Responsive adjustments */
    @media screen and (max-width: 991px) {
      .dashboard-container {
        flex-direction: column;
      }
      .left-panel,
      .right-panel {
        flex: 1 1 100%;
        margin-right: 0;
      }
    }
  </style>
</head>
<body>
  <div class="dashboard-container">
    <!-- LEFT PANEL -->
    <div class="left-panel">
      <!-- Greeting Card -->
      <div class="greeting-card">
        <h2>Hello, Dr. <%= doctor.username %>!</h2>
        <p>Your progress is awesome today. Keep up the great work!</p>
      </div>
      <!-- Stats Row -->
      <div class="stats-row mb-3">
        <div class="stat-card">
          <div class="stat-number"><%= totalAppointments %></div>
          <h4>Total Appointments</h4>
        </div>
        <div class="stat-card">
          <div class="stat-number"><%= doneAppointments %></div>
          <h4>Completed</h4>
        </div>
        <div class="stat-card">
          <div class="stat-number"><%= followUps.length %></div>
          <h4>Follow-ups</h4>
        </div>
      </div>
      <!-- Chart Card (Appointments Over Time) -->
      <div class="chart-card">
        <h4>Appointments Trend</h4>
        <canvas id="appointmentsChart"></canvas>
      </div>
    </div>
    <!-- RIGHT PANEL -->
    <div class="right-panel">
      <!-- Calendar -->
      <div class="calendar-card">
        <h4>Calendar</h4>
        <div id="followUpCalendar"></div>
      </div>
      <!-- Upcoming Appointments -->
      <div class="appointments-card">
        <h4>Upcoming Appointments</h4>
        <div id="appointmentDetails">
          <p>No upcoming appointments.</p>
        </div>
      </div>
    </div>
  </div>
  <!-- jQuery and Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
  <!-- Flatpickr JS -->
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  <script>
    // Helper function to return a local date string in YYYY-MM-DD format
    function getLocalDateString(dateObj) {
      const year = dateObj.getFullYear();
      const month = ('0' + (dateObj.getMonth() + 1)).slice(-2);
      const day = ('0' + dateObj.getDate()).slice(-2);
      return `${year}-${month}-${day}`;
    }

    $(document).ready(function() {
      // Data passed from the backend
      const followUps = <%- JSON.stringify(followUps) %>;
      const chartData = <%- JSON.stringify(appointmentsOverTime) %> || [];
      
      // Map chart data to labels and values
      const chartLabels = chartData.map(item => item.label);
      const chartValues = chartData.map(item => item.count);

      // -------------------------
      // Chart Initialization
      // -------------------------
      const ctx = document.getElementById('appointmentsChart').getContext('2d');
      new Chart(ctx, {
        type: 'line',
        data: {
          labels: chartLabels,
          datasets: [{
            label: 'Appointments',
            data: chartValues,
            borderColor: '#007bff',
            backgroundColor: 'rgba(0, 123, 255, 0.1)',
            fill: true,
            tension: 0.1
          }]
        },
        options: {
          scales: {
            y: { beginAtZero: true }
          },
          responsive: true,
          maintainAspectRatio: false
        }
      });

      // -------------------------
      // Calendar Initialization with Flatpickr
      // -------------------------
      // Build an array of follow-up dates in local "YYYY-MM-DD" format
      const followUpDates = followUps
        .filter(fu => fu.schedule && fu.schedule.scheduleDate)
        .map(fu => {
          const d = new Date(fu.schedule.scheduleDate);
          return getLocalDateString(d);
        });

      flatpickr("#followUpCalendar", {
        inline: true,
        dateFormat: "Y-m-d",
        onDayCreate: function(dObj, dStr, fp, dayElem) {
          // Build local date string for the current day cell
          const dateString = getLocalDateString(dayElem.dateObj);
          // Add green-highlight only if the date is in followUpDates
          if (followUpDates.includes(dateString)) {
            dayElem.classList.add("green-highlight");
          }
        },
        onChange: function(selectedDates, dateStr, instance) {
          // When a date is selected, filter followUps for matching local date
          let detailsContainer = document.getElementById('appointmentDetails');
          let appointments = followUps.filter(function(appt) {
            let apptDate = getLocalDateString(new Date(appt.schedule.scheduleDate));
            return apptDate === dateStr;
          });
          if (appointments.length > 0) {
            let html = "";
            appointments.forEach(function(appt) {
              html += `<div class="appointment-item">
                <div class="appointment-info">
                  <p class="appointment-title">${appt.ownerName}</p>
                  <p class="appointment-date">
                    ${new Date(appt.schedule.scheduleDate).toLocaleDateString()} â€“ ${appt.schedule.scheduleDetails}
                  </p>
                </div>
              </div>`;
            });
            detailsContainer.innerHTML = html;
          } else {
            detailsContainer.innerHTML = "<p>No upcoming appointments.</p>";
          }
        }
      });
    });
    
  </script>
</body>
</html>
