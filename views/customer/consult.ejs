      const d = new Date(date);
      return `${d.toLocaleString('en-US', { month: 'long' }).toLowerCase()} ${d.getDate()} ${d.getFullYear()}`;
    }

    $.ajax({
      url: '/customer/get-consultation',
      method: 'GET',
      data: { reservationId: id },
      success(resp) {
