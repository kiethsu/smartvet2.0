            const dt  = new Date(s.scheduleDate);
            const key = ymd(dt);
            if (!map[key]) map[key] = [];
            map[key].push({
              petName: (p.petId && p.petId.petName) || p.petName || '',
              service: resolveServiceForPet(res, p),
              details: s.scheduleDetails || '',
              reservationId: String(res._id)
            });
          }
        });
      });
      return map;
    }

