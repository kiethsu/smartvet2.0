  function formatVisitDate(date) {
    const d = new Date(date);
    const month = d.toLocaleString('en-US', { month: 'long' }).toLowerCase();
    const day = d.getDate();
    const year = d.getFullYear();
    return `${month} ${day} ${year}`;
